#!/usr/bin/env ruby
require "readline"

res = `gh pr list --author @me -s merged | awk -Ft  '{ print $3 }'`.split("\n")

if !$?.success? then
  abort("Error when running command. Do you have the github CLI installed?")
end

local_branches = res.filter {|branch| `git show-ref refs/heads/#{branch}` ; $?.success?}

if local_branches == []
  exit(0)
end

puts "Going to delete the following already merged branches, ok?"
local_branches.each { |branch| puts branch }

Readline.readline("> ", true)

res.each { |branch| `git branch -D #{branch}` }
