# cd
alias ..='cd ..'

# ls
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

if [ $IS_MAC ]; then
    alias ls='ls -G'
fi

# Some utility aliases
alias m='make'
alias emacs='emacs -nw'
alias l='less'
alias n='mc'
alias sl='ls'
alias telnel='telnet'  # This one is particularly annoying.
alias cls='clear'
alias mdir='mkdir -p'  # This alias supersedes mtool's mdir but who uses msdos ?

# git aliases
alias gl='git log --color'
alias co='git checkout'
alias br='git branch --color'
alias ch='git cherry-pick'
alias cm='git commit'
alias st='git status'
alias pu='git push'
alias gd='git diff'
alias gds='git difftool -y -x "icdiff" --staged | less'

# arcanist
alias arcd='arc diff'
alias arh='arcd HEAD~1'
alias feat='arc feature'

alias pk='pkill'

alias pig='ping -a 8.8.8.8'

alias py='python'

# download an mp3 from youtube
alias youtube-mp3='youtube-dl --extract-audio --audio-format mp3'

alias vg='vagrant'
alias vu='vagrant up'
alias vs='vagrant ssh'

alias yack='ack -C 4 --type=python --ignore-file="match:/test/" --ignore-dir=.venv'
alias tack='ack -C 4 --type=python --ignore-dir=.venv'
alias gack='ack -C 4 --type=go --ignore-dir=vendor'
