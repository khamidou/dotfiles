# cd
alias ..='cd ..'

# ls
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

if [ $IS_MAC ]; then
    alias ls='ls -G'
fi

# Some utility aliases
alias m='make'
alias emacs='emacs -nw'
alias l='less'
alias n='mc'
alias sl='ls'
alias telnel='telnet'  # This one is particularly annoying.
alias cls='clear'
alias mdir='mkdir -p'  # This alias supersedes mtool's mdir but who uses msdos ?

# git aliases
alias gl='git log --color'
alias co='git checkout'
alias br='git branch --color | grep -v "prod" | grep -v "staging"'
alias ch='git cherry-pick'
alias cm='git commit'
alias st='git status'
alias pu='git push'
alias gd='git difftool'
alias gds='git difftool -y -x "icdiff" --staged | less'

# nylas git aliases
alias grhm='git reset --hard master'
alias gppi='git push --force origin production-infra'

# arcanist
alias arcd='stty sane ; arc diff --preview'
alias arh='arcd HEAD~1'

alias pk='pkill'

alias lint='splint' # I keep confusing splint and split

alias spindent='indent -bad -bap -nsob -cdb -sc -br -cdw -cli3 -npcs -cs -nbc -brs -bbo '

alias pig='ping -a google.com'

# Commodity aliases for apt-get :
alias apts='apt-cache search'
alias apti='sudo apt-get install'
alias aptr='sudo apt-get remove'

alias py='python'

# start firefox and display the profile manager
alias ffo='firefox -no-remote -P'

# redshift, with hardcoded paris location
alias reds='redshift -l 33:-96'

# download an mp3 from youtube
alias youtube-mp3='youtube-dl --extract-audio --audio-format mp3'

alias vg='vagrant'
alias vu='vagrant up'
alias vs='vagrant ssh'

command_exists () {
        type "$1" &> /dev/null ;
}

alias yack='ack --type=python --ignore-file="match:/test/" --ignore-dir=.venv'
alias tack='ack --type=python --ignore-dir=.venv'
