# cd
alias ..='cd ..'

# ls
alias ls="ls -F --color=auto"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git log'
alias gp='git push'
alias gd='git diff --color | less -r'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'
alias git-rebase-conflicts='git diff --diff-filter=U |less'

# Some utility aliases 
alias m='make'
alias emacs='emacs23 -nw'
alias l='less'
alias n='mc'
alias sl='ls'
alias telnel='telnet'  # This one is particularly annoying.
alias cls='clear'
alias mdir='mkdir -p'  # This alias supersedes mtool's mdir but who uses msdos ?
                           # a built-in implementation of ls.

# git aliases
alias co='git checkout'
alias br='git branch'
alias ch='git cherry-pick'
alias cm='git commit'
alias st='git status'
alias pu='git push'

# arcanist
alias arcd='stty sane ; arc diff --preview'

alias pk='pkill'

alias lint='splint' # I keep confusing splint and split

alias spindent='indent -bad -bap -nsob -cdb -sc -br -cdw -cli3 -npcs -cs -nbc -brs -bbo '

alias pig='ping google.com'

# Commodity aliases for apt-get :
alias apts='apt-cache search'
alias apti='sudo apt-get install'
alias aptr='sudo apt-get remove'

alias py='python'

# start firefox and display the profile manager
alias ffo='firefox -no-remote -P'

# redshift, with hardcoded paris location
alias reds='redshift -l 33:-96'

# download an mp3 from youtube
alias youtube-mp3='youtube-dl --extract-audio --audio-format mp3'

alias vg='vagrant'
alias vu='vagrant up'
alias vs='vagrant ssh'
alias gentags='ctags -R .'

command_exists () {
        type "$1" &> /dev/null ;
}

if command_exists ack-grep ; then
    alias ack='ack-grep' # silly debian and its strange changes
fi


